@using MyViews.Models
@using System.Collections.Generic;
@{
    //string appTitle = "Asp.Net Core Demo App";
    @* Person person = new Person
    {
        Name = "Edmond",
        DateOfBirth = new DateTime(1990, 1, 1)
    }; *@
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["appTitle"]</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="StyleSheet.css" />
</head>
<body>
    <div class="page-content">
@{
    Person? person = @ViewData["person"] as Person;
}
    <h1>Welcome to My ASP.NET App</h1>
    <h2>Hello @person.Name</h2>
    <div class="box">
    @if (@person.DateOfBirth.HasValue)
    {
        double age = Math.Round((DateTime.Now - @person.DateOfBirth).Value.TotalDays / 365.25);
        <p>Your date of birth is @person.DateOfBirth.Value.ToString("D")</p>
        <h3>@age years old</h3>
    }
    else
    {
        <p>Date of birth not provided.</p>
    }
    </div>
    </div>
</body>
</html>